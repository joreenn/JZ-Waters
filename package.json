{
  "name": "jzwaters",
  "version": "1.0.0",
  "description": "Water Refilling Station and Delivery Management System",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "cd server && npm start",
    "setup:db": "cd server && node scripts/setup-db.js",
    "seed:db": "cd server && node scripts/seed-db.js"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
